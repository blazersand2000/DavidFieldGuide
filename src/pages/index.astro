---
import { Image } from "astro:assets";
import maveImage from "../assets/images/mave.png";
import BaseLayout from "../layouts/BaseLayout.astro"
import { getCollection } from 'astro:content';

const allSpecies = await getCollection('species');

const pageTitle = 'David\'s Field Guide'
---

<BaseLayout pageTitle={pageTitle}>
   <h1 class="text-5xl text-green-900 text-center">{pageTitle}</h1>
   <p class="my-5 text-lg text-center">Welcome to my field guide! Here you'll find information on all the species I've encountered in the wild.</p>
   <Image src={maveImage} alt={pageTitle} width=400 class="mx-auto" />
   <p class="text-md text-center text-gray-600 mb-8">David in his natural habitat</p>
   <ul>
      {allSpecies.map((species) => (
         <li>
            <a href={`/fieldguides/${species.slug}`} class="block px-4 py-2 mx-auto my-2 max-w-72 bg-green-500 text-white text-center rounded hover:bg-green-600 transition">
               {species.data.commonName}
            </a>
         </li>
      ))}
   </ul>
</BaseLayout>